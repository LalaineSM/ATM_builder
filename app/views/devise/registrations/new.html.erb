
<div class="main-w3layouts wrapper">
  <h1>ABSYS ATM Signup</h1>
  <div class="main-agileinfo">
    <div class="agileits-top">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data:{turbo: false}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.text_field :username, autofocus: true, placeholder: "Username", autocomplete: "username", required: true %>
        <%= f.text_field :first_name, autofocus: true, placeholder: "First Name", autocomplete: :first_name, required: true %>
        <%= f.text_field :last_name, autofocus: true, placeholder: "Last Name", autocomplete: :last_name, required: true %>
        <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", required: true %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>
        <%= f.submit "Sign Up", class: "btn btn-lg" %>
        <div class="wthree-text">
          <div class="clear"> </div>
        </div>
      <% end %>
      <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-lg" %><br />
    </div>
  </div>
